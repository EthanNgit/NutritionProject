<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkTheme_Background"
    tools:context=".AddMealItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!--Header-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_62sdp"
            android:backgroundTint="@color/darkTheme_Background_two">

            <TextView
                android:id="@+id/secondaryHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginEnd="@dimen/_70sdp"
                android:ellipsize="end"
                android:fontFamily="@font/circular"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="@dimen/_23sdp"
                android:text="@string/meals_list_add_meal"
                android:textColor="@color/darkTheme_WhiteFull"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_27sdp"
                android:layout_marginTop="@dimen/_27sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_backarrow" />

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Card 1-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/addCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:backgroundTint="@color/darkTheme_Background_two"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_7sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--Name-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/circular_med"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_20sdp"
                            android:text="@string/meal_name"
                            android:textColor="@color/darkTheme_WhiteMed"
                            android:textSize="@dimen/_12ssp" />

                        <!--Name Text Field-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:layout_marginBottom="@dimen/_9sdp"
                            android:backgroundTint="@color/darkTheme_Background"
                            app:cardCornerRadius="@dimen/_2sdp">

                            <EditText
                                android:id="@+id/itemNameTextField"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_black_2dp_stroke_gray"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:hint="@string/meal_name"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_12sdp"
                                android:textColor="@color/darkTheme_WhiteFull"
                                android:textColorHint="@color/darkTheme_WhiteMed"
                                android:textSize="@dimen/_12ssp" />


                        </androidx.cardview.widget.CardView>

                        <!--Name Error-->
                        <TextView
                            android:id="@+id/nameErrorLabelText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/circular_med"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_15sdp"
                            android:text="@string/filler_error_name"
                            android:textColor="@color/darkTheme_Error"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone" />

                        <!--Ingredient search-->
                        <TextView
                            android:id="@+id/tagsLabelText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/circular_med"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_20sdp"
                            android:text="@string/ingredients"
                            android:textColor="@color/darkTheme_WhiteMed"
                            android:textSize="@dimen/_12ssp" />

                        <!--Ingredient Search Box-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:backgroundTint="@color/darkTheme_Background"
                            app:cardCornerRadius="@dimen/_2sdp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/ingredientsSearchBtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_black_2dp_stroke_gray"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:text="@string/ingredients"
                                    android:maxLines="1"
                                    android:paddingStart="@dimen/_36sdp"
                                    android:textColor="@color/darkTheme_WhiteMed"
                                    android:textSize="@dimen/_12ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:layout_marginStart="@dimen/_12sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:background="@drawable/ic_search_normal"
                                    android:backgroundTint="@color/darkTheme_WhiteMed" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <!--Ingredients list box-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:backgroundTint="@color/darkTheme_Background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/ingredientsHeaderTextLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center|top"
                                    android:paddingTop="@dimen/_10sdp"
                                    android:text="@string/no_ingredients"
                                    android:textColor="@color/darkTheme_WhiteMed"
                                    android:textSize="@dimen/_12ssp"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:layout_marginEnd="@dimen/_6sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="@color/darkTheme_Background_two"/>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/mealIngredientsRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_35sdp"
                                tools:listitem="@layout/ingredient_list_view"
                                android:visibility="gone">

                            </androidx.recyclerview.widget.RecyclerView>

                        </androidx.cardview.widget.CardView>

                        <!--Nutrition list box-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:backgroundTint="@color/darkTheme_Background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="0dp"
                                    android:backgroundTint="@color/darkTheme_Transparent">

                                    <TextView
                                        android:id="@+id/dropdownBtn"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingTop="@dimen/_10sdp"
                                        android:text="@string/nutrition_facts"
                                        android:textColor="@color/darkTheme_WhiteMed"
                                        android:textSize="@dimen/_12ssp"
                                        android:textAlignment="center"/>

                                    <ImageView
                                        android:id="@+id/dropdownIcon"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_20sdp"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/ic_dropdown_arrow" />

                                </androidx.cardview.widget.CardView>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:layout_marginEnd="@dimen/_6sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="@color/darkTheme_Background_two"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/mealIngredientNutritionFacts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_40sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:visibility="gone">

                                <!--Calories-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/nutrition_facts"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_17ssp" />


                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_3sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                </LinearLayout>

                                <!--Calories-->
                                <LinearLayout
                                    android:id="@+id/calorie_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/calories"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_17ssp" />

                                        <TextView
                                            android:id="@+id/calorie_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_16ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_3sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                </LinearLayout>

                                <!--Fat-->
                                <LinearLayout
                                    android:id="@+id/fat_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!--Total Fat-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/circular"
                                            android:text="@string/total_fat"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/total_fat_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                    <!--Saturated Fat-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:paddingStart="@dimen/_15sdp"
                                            android:text="@string/saturated_fat"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/saturated_fat_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                    <!--Trans Fat-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:paddingStart="@dimen/_15sdp"
                                            android:text="@string/trans_fat"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/trans_fat_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                </LinearLayout>

                                <!--Cholesterol-->
                                <LinearLayout
                                    android:id="@+id/cholesterol_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!--Cholesterol-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/circular"
                                            android:text="@string/cholesterol"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/cholesterol_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                </LinearLayout>

                                <!--Sodium-->
                                <LinearLayout
                                    android:id="@+id/sodium_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!--Sodium-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/circular"
                                            android:text="@string/sodium"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/sodium_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                </LinearLayout>

                                <!--Potassium-->
                                <LinearLayout
                                    android:id="@+id/potassium_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!--Potassium-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/circular"
                                            android:text="@string/potassium"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/potassium_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                </LinearLayout>

                                <!--Carbs-->
                                <LinearLayout
                                    android:id="@+id/carbs_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!--Total Carb-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/circular"
                                            android:text="@string/total_carb"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/total_carb_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                    <!--Dietary Fiber-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:paddingStart="@dimen/_15sdp"
                                            android:text="@string/dietary_fiber"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/dietary_fiber_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                    <!--Total Sugars-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:paddingStart="@dimen/_15sdp"
                                            android:text="@string/total_sugars"
                                            android:textColor="@color/darkTheme_WhiteFull"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/total_sugar_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:text="@string/filler_value"
                                            android:textAlignment="viewEnd"
                                            android:textColor="@color/darkTheme_Brand"
                                            android:textSize="@dimen/_10ssp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginStart="@dimen/_25sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:background="@color/darkTheme_WhiteFull" />

                                    <!--Added Sugars-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
