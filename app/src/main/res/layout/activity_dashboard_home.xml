<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkTheme_Background"
    android:backgroundTint="@color/darkTheme_Background"
    tools:context=".DashboardHomeActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ref_img" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ref2_img"
        android:visibility="invisible"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Header-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="25dp"
                    android:paddingTop="0dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="0dp"
                    android:gravity="bottom"
                    android:fontFamily="@font/circular"
                    android:text="Dashboard"
                    android:textColor="@color/darkTheme_WhiteFull"
                    android:textSize="24sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="25dp"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="@color/darkTheme_Brand"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/profileButtonText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A"
                        android:textSize="25dp"
                        android:textColor="@color/darkTheme_Background"
                        android:fontFamily="@font/circular_med"
                        android:gravity="center"
                        />


                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--First time Calorie notification card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstTimeCalSetCard"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="@color/darkTheme_Background_two"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:text="Daily Caloric Intake"
                            android:textColor="@color/darkTheme_WhiteFull"
                            android:textSize="18dp"
                            android:fontFamily="@font/circular_med"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="55dp"
                            android:paddingStart="20dp"
                            android:text="Looks like you have not \n set a calorie limit yet."
                            android:textColor="@color/darkTheme_WhiteHigh"
                            android:textAlignment="viewStart"
                            />

                        <Button
                            android:id="@+id/takeCalorieEstimateButton"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="55dp"
                            android:layout_marginStart="225dp"
                            android:background="@drawable/bg_green_100dp"
                            android:text="Set goal"
                            android:textSize="15dp"
                            android:fontFamily="@font/circular"
                            android:textAllCaps="false" />


                    </androidx.cardview.widget.CardView>

                    <!--First time Calorie notification card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/calProgressChartCard"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="@color/darkTheme_Background_two"
                        android:visibility="visible">




                    </androidx.cardview.widget.CardView>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@null"
        app:itemIconTint="@color/darkTheme_WhiteFull"
        app:itemTextColor="@color/darkTheme_WhiteFull"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:menu="@menu/bottom_navmenu" />


</androidx.constraintlayout.widget.ConstraintLayout>