<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkTheme_Background"
    android:backgroundTint="@color/darkTheme_Background"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ref6_img" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:layout_marginBottom="60dp"
            app:layout_constraintTop_toTopOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Header-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/darkTheme_Background_two">

                    <TextView
                        android:id="@+id/secondaryHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Settings"
                        android:textColor="@color/darkTheme_WhiteFull"
                        android:fontFamily="@font/circular"
                        android:textSize="15dp"
                        android:paddingTop="25dp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="35dp"
                        android:src="@drawable/ic_backarrow"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:paddingStart="23dp"
                        android:text="Account"
                        android:textSize="18dp"
                        android:fontFamily="@font/circular"
                        android:textColor="@color/darkTheme_WhiteFull"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/detailsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        android:backgroundTint="@color/darkTheme_Transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="27dp"
                                android:paddingStart="23dp"
                                android:text="Details"
                                android:textSize="18dp"
                                android:textColor="@color/darkTheme_WhiteFull"/>

                            <TextView
                                android:id="@+id/emailTextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:paddingStart="23dp"
                                android:text="email@email.com"
                                android:textSize="14dp"
                                android:textColor="@color/darkTheme_WhiteMed"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:padding="22dp"
                            android:paddingEnd="350dp"
                            android:layout_marginTop="10dp"
                            android:scaleX="-1"
                            android:src="@drawable/ic_backarrow"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/goalsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        android:backgroundTint="@color/darkTheme_Transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="27dp"
                                android:paddingStart="23dp"
                                android:text="Goals"
                                android:textSize="18dp"
                                android:textColor="@color/darkTheme_WhiteFull"/>

                            <TextView
                                android:id="@+id/goalsTextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:paddingStart="23dp"
                                android:text="- - - - Calories"
                                android:textSize="14dp"
                                android:textColor="@color/darkTheme_WhiteMed"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:padding="22dp"
                            android:paddingEnd="350dp"
                            android:layout_marginTop="10dp"
                            android:scaleX="-1"
                            android:src="@drawable/ic_backarrow"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:paddingStart="23dp"
                        android:text="About"
                        android:textSize="18dp"
                        android:fontFamily="@font/circular"
                        android:textColor="@color/darkTheme_WhiteFull"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        android:backgroundTint="@color/darkTheme_Transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="27dp"
                                android:paddingStart="23dp"
                                android:text="Version"
                                android:textSize="18dp"
                                android:textColor="@color/darkTheme_WhiteFull"/>

                            <TextView
                                android:id="@+id/versionTextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:paddingStart="23dp"
                                android:text="Alpha 0.0"
                                android:textSize="14dp"
                                android:textColor="@color/darkTheme_WhiteMed"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/termsAndConditionsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        android:backgroundTint="@color/darkTheme_Transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="27dp"
                                android:paddingStart="23dp"
                                android:text="Terms and Conditions"
                                android:textSize="18dp"
                                android:textColor="@color/darkTheme_WhiteFull"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:paddingStart="23dp"
                                android:text="All things terms and conditions"
                                android:textSize="14dp"
                                android:textColor="@color/darkTheme_WhiteMed"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/creditsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        android:backgroundTint="@color/darkTheme_Transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="27dp"
                                android:paddingStart="23dp"
                                android:text="Credits"
                                android:textSize="18dp"
                                android:textColor="@color/darkTheme_WhiteFull"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:paddingStart="23dp"
                                android:text="All things credits"
                                android:textSize="14dp"
                                android:textColor="@color/darkTheme_WhiteMed"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:paddingStart="23dp"
                        android:text="Other"
                        android:textSize="18dp"
                        android:fontFamily="@font/circular"
                        android:textColor="@color/darkTheme_WhiteFull"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        android:backgroundTint="@color/darkTheme_Transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="27dp"
                                android:paddingStart="23dp"
                                android:text="Log out"
                                android:textSize="18dp"
                                android:textColor="@color/darkTheme_WhiteFull"/>

                            <TextView
                                android:id="@+id/logoutTextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:paddingStart="23dp"
                                android:text="You are logged in as email@email.com"
                                android:textSize="14dp"
                                android:textColor="@color/darkTheme_WhiteMed"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@null"
        app:itemIconTint="@color/darkTheme_WhiteFull"
        app:itemTextColor="@color/darkTheme_WhiteFull"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:menu="@menu/bottom_navmenu" />


</androidx.constraintlayout.widget.ConstraintLayout>