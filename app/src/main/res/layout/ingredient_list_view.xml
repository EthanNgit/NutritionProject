<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/darkTheme_Background"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/listItemIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardCornerRadius="100dp"
            android:backgroundTint="@color/darkTheme_Brand"
            android:clickable="false">

            <TextView
                android:id="@+id/listItemIconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/darkTheme_Black"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/listItemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_marginEnd="@dimen/_45sdp"
            android:paddingStart="@dimen/_62sdp"
            android:paddingTop="@dimen/_13sdp"
            android:text="@string/filler_food_name"
            android:textColor="@color/darkTheme_WhiteFull"
            android:textSize="@dimen/_14ssp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"/>

        <TextView
            android:id="@+id/listItemDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_marginEnd="@dimen/_100sdp"
            android:paddingStart="@dimen/_62sdp"
            android:paddingTop="@dimen/_33sdp"
            android:text="@string/filler_food_info"
            android:textColor="@color/darkTheme_WhiteFull"
            android:textSize="@dimen/_10ssp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"/>

        <ImageView
            android:id="@+id/listItemTrash"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"

            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="right"
            android:background="@drawable/ic_trash"
            android:backgroundTint="@color/darkTheme_Brand"
            android:visibility="visible"/>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>