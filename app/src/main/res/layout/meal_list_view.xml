<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_margin="@dimen/_6sdp"
        android:backgroundTint="@color/darkTheme_Background"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/listItemIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_100sdp"
            android:backgroundTint="@color/darkTheme_Brand"
            android:clickable="false">

            <TextView
                android:id="@+id/listItemIconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/darkTheme_Black"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/listItemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_15sdp"
            android:paddingStart="@dimen/_62sdp"
            android:paddingTop="@dimen/_20sdp"
            android:text="@string/filler_food_name"
            android:textColor="@color/darkTheme_WhiteFull"
            android:textSize="@dimen/_16sdp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/listItemDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_62sdp"
            android:layout_marginEnd="@dimen/_100sdp"
            android:paddingTop="@dimen/_42sdp"
            android:text="@string/filler_food_info_time"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/darkTheme_WhiteFull"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/moreInfoButton"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/bg_green_100dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="More info"
            android:textAllCaps="false"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/circular" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>